---
import { APP_NAME } from "@/data/constant";
import "@/styles/index.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    <meta name="description" content="Nugraha Billy Viandy - Portfolio website">
    <meta name="theme-color" content="#0a0a0a">

    <!-- Favicons -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website">
    <meta property="og:title" content={`${APP_NAME} - Portfolio`}>
    <meta
      property="og:description"
      content="Nugraha Billy Viandy - Portfolio website"
    >

    <title>Portfolio</title>

    <!-- Preconnect to Google Fonts for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  </head>
  <body>
    <!-- Background decorative grid -->
    <div class="bg-decoration" aria-hidden="true"></div>

    <main class="container">
      <!-- Side decorative elements -->
      <div
        class="side-decoration side-decoration-left"
        aria-hidden="true"
      ></div>
      <div
        class="side-decoration side-decoration-right"
        aria-hidden="true"
      ></div>

      <div class="content">
        <h1 class="headline">
          <span class="headline-frame">Under Construction</span>
        </h1>

        <p class="subheading">
          Building something exceptional. Stay tuned for updates.
        </p>

        <!-- Decorative connecting line -->
        <div class="line-decoration" aria-hidden="true"></div>

        <a href="#" class="cta-button" aria-label="View my CV">
          <span
            class="button-corner button-corner-tr"
            aria-hidden="true"
          ></span>
          <span
            class="button-corner button-corner-bl"
            aria-hidden="true"
          ></span>
          View My CV
          <span class="arrow" aria-hidden="true">â†’</span>
        </a>
      </div>
    </main>

    <!-- Cursor follower -->
    <div class="cursor-follower" aria-hidden="true"></div>

    <script>
      const cursorFollower =
        document.querySelector<HTMLDivElement>(".cursor-follower");

      if (cursorFollower) {
        let idleTimeout: NodeJS.Timeout | null = null;

        // Update cursor position
        document.addEventListener("mousemove", (e) => {
          cursorFollower.style.left = `${e.clientX}px`;
          cursorFollower.style.top = `${e.clientY}px`;

          // Remove idle class when moving
          cursorFollower.classList.remove("cursor-follower-idle");

          // Reset idle timer
          if (idleTimeout) {
            clearTimeout(idleTimeout);
          }
          idleTimeout = setTimeout(() => {
            cursorFollower.classList.add("cursor-follower-idle");
          }, 3500);
        });

        // Hide cursor follower when mouse leaves window
        document.addEventListener("mouseleave", () => {
          cursorFollower.style.opacity = "0";
          if (idleTimeout) {
            clearTimeout(idleTimeout);
          }
        });

        document.addEventListener("mouseenter", () => {
          cursorFollower.style.opacity = "1";
        });

        // Hover effect for interactive elements
        const interactiveElements = document.querySelectorAll(
          'a, button, [role="button"]'
        );

        for (const element of interactiveElements) {
          element.addEventListener("mouseenter", () => {
            cursorFollower.classList.add("cursor-follower-hover");
          });

          element.addEventListener("mouseleave", () => {
            cursorFollower.classList.remove("cursor-follower-hover");
          });
        }
      }
    </script>
  </body>
</html>
